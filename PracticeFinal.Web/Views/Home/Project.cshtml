@using PracticeFinal.WebAPI.Models.SiteItems
@model MusketeerProject
@{
    ViewData["Title"] = Model.Name;
}

<div class="text-center">
    <div class="container text-center">
        <div class="row">
            <div class="col-8 text-start">
                <h1>@Model.Name</h1>
            </div>
            <div class="col">
                <img src=@("/images/projects/" + Model.Image) class="card-img-top" alt=@Model.Name>
            </div>
        </div>
        <div class="row">
            <div class="col-8 text-start">
                @Model.Description
            </div>
        </div>
    </div>
</div>
