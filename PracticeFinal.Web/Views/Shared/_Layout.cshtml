<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - #SkillProfi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PracticeFinal.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">#SkillProfi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Context.Request.Cookies["mainButtonText"]</a>
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@ViewData["mainButtonText"]</a> *@
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Projects">@Context.Request.Cookies["projectsButtonText"]</a>
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Projects">@ViewData["projectsButtonText"]</a> *@
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Services">@Context.Request.Cookies["servicesButtonText"]</a>
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Services">@ViewData["servicesButtonText"]</a> *@
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Blog">@Context.Request.Cookies["blogButtonText"]</a>
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Blog">@ViewData["blogButtonText"]</a> *@
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contacts">@Context.Request.Cookies["contactsButtonText"]</a>
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contacts">@ViewData["contactsButtonText"]</a> *@
                        </li>
                        @{
                            // Почему-то после авторизации IsAuthenticated становится опять false
                            // if (User.Identity?.IsAuthenticated == true && User.IsInRole("admin"))
                            // {
                            if (TempData["IsUserSignedIn"] != null && (bool)TempData["IsUserSignedIn"]!)
                            {
                                TempData.Keep("IsUserSignedIn");
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="CRM">CRM</a>
                                </li>
                            }
                            // }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - #SkillProfi
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
